{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Login{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{asset('css/login.css')}}" media="all">
{% endblock %}

{% block body %}

   <div id="login" class="div_main_short">
                        
    <div id="crear_nueva_cuenta">
        <h3>¿Aún no estás registrado? Crea una cuenta de usuario:</h3>
        <p><br/>Para poder ingresar en TecnoComponentes S.L. debes estar dado de alta con una cuenta de usuario y contar con un nombre de usuario y una constraseña. Si aún no tienes estos datos puedes crearte una cuenta desde aquí.<br/><br/><br/></p>

        <a href="{{ path('registro') }}" class="bold" title="Crear Nueva Cuenta"><div id="boton_registro">Crear Cuenta de Usuario</div></a>  
    </div>
    
    <div id="identificarse">
        <div id="staffORclient" class="empleado_cliente">
            <a class="bold boton" title="Login Clientes / Empleados"><div id="boton_login_clientes_empleados">Login Clientes / Empleados</div></a>
        </div>
        
        <div id="identicarse_cliente">
        
        <p>Si ya estas registrado, identificate:</p>
        <form id="datos_login_cliente" action="{{ path('login_post') }}" method="post">
            
            <div class="campos_login">
                <label for="email">Email:<br/></label>
                <input id="email" name="email" type="email" title="e.g. tecnocomponentes@gmail.com" placeholder="Escriba aqui" size="50"/> <!-- required /> -->
            </div>
            
            <div class="campos_login">
                <label for="password">Contraseña:<br/></label>
                <input id="password" name="password" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="La contraseña debe contener al menos un número, una mayúsucula, una minúscula, y al menos ser de 8 caracteres. (e.g.  abc1dEf8)" placeholder="Min 8 letras y numeros, mayusculas, ..." size="50"/>  <!-- required /> -->
            </div>
            
            <div id="errMsg" class="error bold" style="display: none"></div>
            
            <input type="checkbox" id="checkbox_1" name="checkbox" value="1"> Recordar contraseña
            
            <button id="a_entrar"  class="bold" title="Entrar">Entrar</button>
            
        </form>
        <p><a id="olvidado"  class="bold" href="#" title="Olvidó su Contraseña">¿Has olvidado la contraseña?</a></p>
        
        </div>
        
        
        <div id="identicarse_empleado" style="display: none">
            <p>Identificación de empleados:</p>
            <form id="datos_login_empleado" action="{{ path('login_post') }}" method="post">

                <div class="campos_login">
                    <label for="email_empleado">Email empleado:<br/></label>
                    <input id="email_empleado" name="email_empleado" type="email" title="e.g. tecnocomponentes@gmail.com" placeholder="Escriba aqui" size="50"/> <!-- required /> -->
                </div>

                <div class="campos_login">
                    <label for="password2">Contraseña:<br/></label>
                    <input id="password2" name="password2" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="La contraseña debe contener al menos un número, una mayúsucula, una minúscula, y al menos ser de 8 caracteres. (e.g.  abc1dEf8)" placeholder="Min 8 letras y numeros, mayusculas, ..." size="50"/>  <!-- required /> -->
                </div>

                <div id="errMsg2" class="error bold" style="display: none"></div>

                <input type="checkbox" id="checkbox_1" name="checkbox" value="1"> Recordar contraseña

                <button id="a_entrar" class="bold" title="Entrar">Entrar</button>

            </form>
            <p><a id="olvidado" class="bold" href="#" title="Olvidó su Contraseña">¿Has olvidado la contraseña?</a></p>
        </div>
    </div>
</div>

{% block javascripts %} <script src="{{asset('funciones/login.js')}}"></script> {% endblock %}

{% endblock %}
