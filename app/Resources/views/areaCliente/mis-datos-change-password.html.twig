{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Cambiar Contraseña{% endblock %}

{% block stylesheets %}        
    <link rel="stylesheet" type="text/css" href="{{asset('css/misDatos.css')}}" media="all">
{% endblock %}

{% block body %}

<div id="misDatos" class="div_main">
                
    <h3>CAMBIAR CONTRASEÑA</h3>
    <form id="datos_cambio" action="{{ path('mis-datos-change-password_post') }}" method="post">
            <div class="campos_reg bold">
                <label for="password_cambios">Cambiar Contraseña<span class="red">*</span><br/> </label>
                <input id="password_cambios" name="password_cambios" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="La contraseña debe contener al menos un número, una mayúsucula, una minúscula, y al menos ser de 8 caracteres. (e.g.  abc1dEf8)" size="50"/>  <!-- required /> -->
            </div>

            <div class="campos_reg bold">
                <label for="repetir_password_cambios"></label>Repetir Contraseña<span class="red">*</span><br/> 
                <input id="repetir_password_cambios" name="repetir_password_cambios" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="La contraseña debe contener al menos un número, una mayúsucula, una minúscula, y al menos ser de 8 caracteres. (e.g.  abc1dEf8)" size="50"/>  <!-- required /> -->
            </div>

            <div id="errMsg_cambios" class="error bold red" style="display: none"></div>

            <button id="guardar_cambios" class="bold" title="Guardar cambios">Guardar Cambios</button>
    </form>
    
    <p id="atras"><a href="{{path('areaCliente')}}">Volver atrás</a></p>
    
</div>

{% block javascripts %} <script src="{{asset('funciones/misDatos_ChangePsswd.js')}}"></script> {% endblock %}


{% endblock %}