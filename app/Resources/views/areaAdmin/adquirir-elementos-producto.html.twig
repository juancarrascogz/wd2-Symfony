{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Adquirir Elementos{% endblock %}

{% block stylesheets %}        
    <link rel="stylesheet" type="text/css" href="{{asset('css/misDatos.css')}}" media="all">
{% endblock %}

{% block body %}

<div id="misDatos" class="div_main">
                
    <h3>Añadir elementos</h3>
    <form id="datos_add_elementos" action="{{ path('adquirir-elementos-producto_post') }}" method="post">
        
        <div class="campos_reg bold">
            <label for="nombre">Nombre Producto<br/></label>
                <input id="nombre" name="nombre" type="text" title="Nombre" placeholder="Escriba aqui" size="50" value="{{producto.name}}" readonly/>  <!-- required /> -->
            </div>

            <div class="campos_reg bold">
                <label for="elementos_add">Añadir cuántos elementos <span class="red">*</span><br/></label>
                <input id="elementos_add" name="elementos_add" type="text" title="Número de elmentos ha añadir" placeholder="Escriba aqui" size="50"/>  <!-- required /> -->
            </div>
            
        <div id="selector_tienda" class="campos_reg bold">
                    <p class="campos_reg">Tienda Asignada</p>
                        <select id="tienda_asignada" name="tienda_asignada">
                            {% for tienda in tiendas %}
                                <option value="{{tienda.getTiendas_id}}">{{tienda.nombre}}</option>
                            {% endfor %}
                        </select>
                </div>

        <div style="display: none"><input id="producto_id" name="producto_id" type="text" title="producto_id" size="10" value="{{producto.getProducto_id}}"/></div>

        <div id="errMsg" class="error bold red" style="display: none"></div>

        <button id="guardar_cambios" class="bold" title="Guardar cambios">Guardar Cambios</button>
    </form>
                        
</div>

{% block javascripts %} <script src="{{asset('funciones/add-elementos.js')}}"></script> {% endblock %}


{% endblock %}