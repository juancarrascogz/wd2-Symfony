{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Alta Tienda{% endblock %}

{% block stylesheets %}        
    <link rel="stylesheet" type="text/css" href="{{asset('css/registro.css')}}" media="all">
{% endblock %}

{% block body %}

<div id="registro" class="div_main">
    <h3>NUEVO ALTA TIENDA <span> (alta tienda)</span></h3>
    
    <form id="datos_registro" action="{{ path('alta-tienda_post') }}" method="post">
        
        <div class="campos_reg bold">
            <label for="nombre_tienda">Nombre Tienda<span class="red">*</span><br/></label>
            <input id="nombre_tienda" name="nombre_tienda" type="text" title="Nombre de tienda (min.4 - max.30)" minlength="4" maxlength="30" placeholder="Escriba aqui" size="50"/>  <!-- required /> -->
        </div>
        
        <div class="campos_reg bold">
            <label for="nombre">Nombre Responsable Tienda<span class="red">*</span><br/></label>
            <input id="nombre" name="nombre" type="text" title="Nombre" placeholder="Escriba aqui" size="50"/>  <!-- required /> -->
        </div>
        
        <div class="campos_reg bold">
            <label for="email">Email<span class="red">*</span><br/> </label>
            <input id="email" name="email" type="email" title="Email" placeholder="tecnocomponentes@gmail.com" size="50"/> <!-- required /> -->
        </div>
        
        <div class="campos_reg bold">
            <label for="repetir_email">Repetir Email<span class="red">*</span><br/></label> 
            <input id="repetir_email" name="repetir_email" type="email" title="Repetir Email" placeholder="tecnocomponentes@gmail.com" size="50"/>  <!-- required /> -->
        </div>

        <div id="p_telefono" class="campos_reg bold">
            <label for="telefono1">Teléfono<br/> </label>
            <input id="telefono1" name="telefono1" type="tel" title="Teléfono (e.g. 985000999 - 983 222 850 - 955 666852 - 975 52 25 14)" placeholder="985 000 999" size="50" pattern="[0-9]{9}|[0-9]{3} [0-9]{3} [0-9]{3}|[0-9]{3} [0-9]{6}|[0-9]{3} [0-9]{2} [0-9]{2} [0-9]{2}"/> <!-- required /> -->
        </div>
                                    
        <div id="p_direccion" class="campos_reg bold">
            <label for="direccion1">Dirección<span class="red">*</span><br/></label>
            <input id="direccion1" name="direccion1" type="text" title="Dirección" placeholder="C/Peñalver 108" size="50"/>  <!-- required /> -->
        </div>
        
        <div id="errMsg" class="error bold red" style="display: none"></div>
        
        <button id="a_envio" class="bold" title="Registrar">Registrar</button>
    </form>

    <p class="atras"><a href="{{path('areaAdministracion')}}">Volver atrás</a></p>

</div>
    
{% block javascripts %} <script src="{{asset('funciones/registroTienda.js')}}"></script> {% endblock %}

{% endblock %}