{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Editar Producto{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{asset('css/misDatos.css')}}" media="all">
{% endblock %}

{% block body %}

<div id="misDatos" class="div_main">
    <h3>Editar Producto</h3>
    <form id="datos_cambio" action="{{ path('editar-datos-producto_post') }}" method="post">
        
        <div class="campos_reg bold">
            <label for="acronimo_cambios">Acrónimo<span class="red">*</span><br/></label>
            <input id="acronimo_cambios" name="acronimo_cambios" type="text" title="Nombre de tienda (min.4 - max.30)" maxlength="30" placeholder="Escriba aqui" size="50" value="{{producto.acronimo}}"/>  <!-- required /> -->
        </div>
        
        <div class="campos_reg bold">
            <label for="nombre_cambios">Nombre Producto<span class="red">*</span><br/></label>
            <input id="nombre_cambios" name="nombre_cambios" type="text" title="Nombre" placeholder="Escriba aqui" size="50" value="{{producto.name}}"/>  <!-- required /> -->
        </div>

        <div class="campos_reg bold">
            <label for="descripcion_cambios">Descripción<span class="red">*</span><br/></label>
            <input id="descripcion_cambios" name="descripcion_cambios" type="text" title="descripcion" placeholder="Escriba aqui" size="50" value="{{producto.descripcion}}"/>  <!-- required /> -->
        </div>

        <div class="campos_reg bold">
        <label for="precio_cambios">Precio Producto<span class="red">*</span><br/></label>
        <input id="precio_cambios" name="precio_cambios" type="text" title="Nombre" placeholder="Escriba aqui" size="50"  value="{{producto.precio}}"/>  <!-- required /> -->
    </div>

    <div class="campos_reg bold">
        <label for="ref_cambios">Referencia del Producto<span class="red">*</span><br/></label>
        <input id="ref_cambios" name="ref_cambios" type="text" title="Nombre" placeholder="Escriba aqui" size="50"  value="{{producto.ref}}"/>  <!-- required /> -->
    </div>

    <div class="campos_reg bold">
        <label for="fabricante_cambios">Fabricante del Producto<span class="red">*</span><br/></label>
        <input id="fabricante_cambios" name="fabricante_cambios" type="text" title="Nombre" placeholder="Escriba aqui" size="50"  value="{{producto.fabricante}}"/>  <!-- required /> -->
    </div>
                                
    <div style="display: none"><input id="producto_id" name="producto_id" type="text" title="producto_id" size="10" value="{{producto.getProducto_id}}"/></div>


        <div id="errMsg_cambios" class="error bold red" style="display: none"></div>

        <button id="guardar_cambios" class="bold" title="Guardar cambios">Guardar Cambios</button>
    </form>
                        
</div>

{% block javascripts %} <script src="{{asset('funciones/editar-categoria.js')}}"></script> {% endblock %}

   
{% endblock %}